    "eslint-plugin-react": "^7.14.3",
    "jsdom": "^16.2.0",
    "less": "^2.7.3",
    "mocha": "^8.2.0",
    "nyc": "^15.0.0",
    "postcss": "^8.1.14",
    "postcss-cli": "^8.3.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rimraf": "^3.0.2",
    "setup-env": "^1.2.3",
    "sinon": "^9.2.0",
    "sinon-chai": "^3.5.0"
